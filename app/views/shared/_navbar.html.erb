                <%= f.password_field :catchphrase, placeholder: "Enter Catchphrase", class: "form-control form-control-sm me-2", style: "width: 150px;" %>
                <%= f.submit "Go", class: "btn btn-outline-dark btn-sm" %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
