<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Records</h2>
    <%= link_to "New Record", new_record_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>In Time</th>
        <th>Out Time</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= record.name %></td>
          <td><%= record.in_time %></td>
          <td><%= record.out_time %></td>
          <td><%= record.created_at %></td>
          <td><%= record.updated_at %></td>
          <td>
            <%= link_to "Show", record_path(record), class: "btn btn-sm btn-outline-info me-1" %>
            <%= link_to "Edit", edit_record_path(record), class: "btn btn-sm btn-outline-warning me-1" %>
            <%= link_to "Destroy", record_path(record), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
