<h1>Records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>In Time</th>
      <th>In Photo</th>
      <th>Out Time</th>
      <th>Out Photo</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.in_time&.strftime('%B %d, %Y %I:%M %p') %></td>
        <td>
          <% if record.in_photo.attached? %>
          <%= image_tag(record.in_photo)%>
          <% else %>
            <span class="text-muted">No photo</span>
          <% end %>
        </td>
        <td><%= record.out_time&.strftime('%B %d, %Y %I:%M %p') %></td>
        <td>
          <% if record.out_photo.attached? %>
          <%= image_tag(record.out_photo)%>

          <% else %>
            <span class="text-muted">No photo</span>
          <% end %>
        </td>
        <td><%= link_to 'Show', record, class: "btn btn-sm btn-info" %></td>
        <td>
          <% if record.out_time.nil? %>
            <%= link_to 'Check Out', edit_record_path(record), class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
        <td><%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path, class: "btn btn-primary" %>