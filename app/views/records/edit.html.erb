<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-warning text-dark">
      <h2 class="mb-0">Edit Record</h2>
    </div>

    <div class="card-body">
      <%= form_with(model: @record, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :in_time, class: "form-label" %>
          <%= form.datetime_select :in_time, {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :out_time, class: "form-label" %>
          <%= form.datetime_select :out_time, {}, class: "form-select" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit "Update Record", class: "btn btn-success" %>
          <%= link_to "Back", record_path(@record), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
