    <div class="container mt-5">
      <div class="card shadow">
        <div class="card-header bg-warning text-dark">
          <h2 class="mb-0">Edit Record</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @record, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <% if @record.in_photo.attached? %>
                <div class="mt-3 text-center">
                  <%= image_tag @record.in_photo, class: "img-fluid rounded border", style: "max-height: 300px;" %>
                </div>
              <% end %>
            </div>
            <div class="mb-3">
              <div class="card-body">
                <p>Current time: <%= Time.current.strftime('%B %d, %Y %I:%M %p') %></p>
                <div class="mb-3">
                  <%= form.label :out_photo, "Upload Check Out Photo", class: "form-label" %>
                  <%= form.file_field :out_photo, class: "form-control", accept: "image/*", capture: "camera" %>
                  <div class="form-text">Take a photo or upload an image for check out verification.</div>
                </div>
              </div>
              <div class="d-flex justify-content-between">
                <%= form.submit "Update Record", class: "btn btn-success" %>
                <%= link_to "Back", record_path(@record), class: "btn btn-secondary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
