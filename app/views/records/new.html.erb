<h1>New Record</h1>
<%= form_with model: @record, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
    <% if @record.errors[:name].any? %>
      <div class="text-danger"><%= @record.errors[:name].join(", ") %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= webcam_capture(form, :photo) %>
    <% if @record.errors[:photo].any? %>
      <div class="text-danger"><%= @record.errors[:photo].join(", ") %></div>
    <% end %>
  </div>
  <%= form.submit "Create Record", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", records_path, class: "btn btn-secondary mt-3" %>
