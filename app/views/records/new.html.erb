    <div class="container mt-5">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">New Record</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @record, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :in_photo, "Upload Check in Photo", class: "form-label" %>
              <%= form.file_field :in_photo, class: "form-control", accept: "image/*", capture: "camera" %>
              <div class="form-text">Take a photo or upload an image for check out verification.</div>
            </div>
            <div class="d-flex justify-content-between">
              <%= form.submit "Create Record", class: "btn btn-success" %>
              <%= link_to "Back", root_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
