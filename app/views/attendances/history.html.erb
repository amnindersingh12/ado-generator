<h1>Attendance History for <%= @record.name %></h1>
<%= form_with url: history_record_attendances_path(@record), method: :get, local: true, class: "row g-3 mb-4" do |f| %>
  <div class="col-md-4">
    <%= f.label :from, "From Date", class: "form-label" %>
    <%= f.date_field :from, value: params[:from], class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :to, "To Date", class: "form-label" %>
    <%= f.date_field :to, value: params[:to], class: 'form-control' %>
  </div>
  <div class="col-md-4 d-flex align-items-end">
    <%= f.submit 'Generate Report', class: 'btn btn-primary me-2' %>
    <%= link_to 'Print PDF', history_record_attendances_path(@record, format: :pdf, from: params[:from], to: params[:to]), class: 'btn btn-success', target: '_blank', rel: 'noopener' %>
  </div>
<% end %>
<% if @attendances.any? %>
  <%= render partial: 'shared/summary_card', locals: {
  attendances: @attendances,
  record: @record,
  current_user: current_user
} %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center shadow-sm">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Purpose of Visit</th>
          <th>In Time</th>
          <th>In Photo</th>
          <th>Out Time</th>
          <th>Out Photo</th>
          <th>Time Spent</th>
          <th>Created By</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each_with_index do |attendance, index| %>
          <% needs_checkout = attendance.out_time.nil? %>
          <tr class="<%= 'table-warning' if needs_checkout %>">
            <td><%= index + 1 %></td>
            <td><strong><%=attendance.purpose%></strong></td>
            <td><% if attendance.in_time&.strftime('%B %d, %Y %H:%M:%S') %>
               <%= attendance.in_time&.strftime('%B %d, %Y %H:%M:%S') %>
             <% else %>
                <%= link_to 'Check-In', complete_check_in_record_attendance_path(@record, attendance), class: 'btn btn-success' %>
             <% end %></td>
            <td>
              <% if attendance.in_photo.attached? %>
                <%= enlargeable_image_tag attendance.in_photo, id: "in#{attendance.id}", label: 'Check In Photo' %>
              <% else %>
                N/A
              <% end %>
            </td>
            <td><%= attendance.out_time&.strftime('%B %d, %Y %H:%M:%S') || 'Check Out Pending' %></td>
            <td>
              <% if attendance.out_photo.attached? %>
                <%= enlargeable_image_tag attendance.out_photo, id: "out#{attendance.id}", label: 'Check Out Photo' %>
              <% elsif attendance.user_id == current_user.id && attendance.out_time.nil? %>
                <%= link_to 'Check Out', edit_record_attendance_path(@record, attendance), class: 'btn btn-warning btn-sm' %>
              <% else %>
                N/A
              <% end %>
            </td>
            <td><%= time_spent(attendance) %></td>
            <td><%= attendance.user&.email || 'Unknown' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted">No attendance records found.</p>
<% end %>
<%= link_to 'Back', record_path(@record), class: 'btn btn-secondary mt-3' %>
